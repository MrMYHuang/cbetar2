{
  "extends": null, 
  "appId": "io.github.mrmyhuang.cbetar2",
  "files": [
    "buildElectron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "electronBuilderConfigs",
      "to": ".",
      "filter": ["IsMac.txt"]
    },
    "buildElectron/*.xsl",
    "cbeta_gaiji/cbeta_gaiji.json"
  ],
  "asarUnpack": [
    "node_modules/node1-libxmljsmt-myh/**/*"
  ],
  "afterAllArtifactBuild": "electron-builder-notarize-pkg-myh",
  "icon": "buildElectron/icon.icns",
  "mac": {
    "publish": ["github"],
    "type": "distribution",
    "artifactName": "${name}_${version}_macos_${arch}.${ext}",
    "category": "public.app-category.education",
    "minimumSystemVersion": "10.10",
    "hardenedRuntime": true
  }
}