{
  "extends": null,
  "appId": "io.github.mrmyhuang.cbetar2",
  "files": [
    "buildElectron/**/*",
    "package.json"
  ],
  "extraFiles": [
    {
      "from": "buildElectron",
      "to": ".",
      "filter": [
        "icon.png",
        "電子佛典.VisualElementsManifest.xml"
      ]
    }
  ],
  "extraResources": [
    {
      "from": "electronBuilderConfigs",
      "to": ".",
      "filter": ["IsWin.txt"]
    },
    "buildElectron/*.xsl",
    "cbeta_gaiji/cbeta_gaiji.json"
  ],
  "asarUnpack": [
    "node_modules/node1-libxmljsmt-myh/**/*"
  ],
  "productName": "電子佛典",
  "icon": "buildElectron/icon.png",
  "win": {
    "artifactName": "${name}_${version}_win_${arch}.${ext}"
  },
  "nsis": {
    "differentialPackage": false
  }
}